//Addition..Taking user Input and calculate than print..
void addition() {
    printf("Enter the numbers you want to add: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The sum of a and b is %d\n", a + b);
}

//Subtraction..Taking user Input and calculate than print..
void subtraction() {
    printf("Enter the numbers you want to subtract: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The subtraction of a and b is %d\n", a - b);
}

//Multiplication..Taking user Input and calculate than print..
void multiplication() {
    printf("Enter the numbers you want to multiply: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The multiplication of a and b is %d\n", a * b);
}

//Division..Taking user Input and calculate than print..
void division() {
    printf("Enter the numbers you want to divide: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The division of a and b is %f\n", (float) a / (float) b);
}

//Sine..Taking user Input and calculate than print..
void Sine() {
    printf("Enter the angle in degrees: ");
    double angle;
    scanf("%lf", &angle);
    printf("The sine of %lf degrees is %lf\n", angle, sin(angle * M_PI / 180));
}

//Cosine..Taking user Input and calculate than print..
void Cosine() {
    printf("Enter the angle in degrees: ");
    double angle;
    scanf("%lf", &angle);
    printf("The cosine of %lf degrees is %lf\n", angle, cos(angle * M_PI / 180));
}

//Tangent..Taking user Input and calculate than print..
void Tangent() {
    printf("Enter the angle in degrees: ");
    double angle;
    scanf("%lf", &angle);
    printf("The tangent of %lf degrees is %lf\n", angle, tan(angle * M_PI / 180));
}

//Arcsine..Taking user Input and calculate than print..
void Arcsine() {
    printf("Enter the value for arcsine: ");
    double value;
    scanf("%lf", &value);
    printf("The arcsine of %lf is %lf degrees\n", value, asin(value) * 180 / M_PI);
}

//Arccosine..Taking user Input and calculate than print..
void Arccosine() {
    printf("Enter the value for arccosine: ");
    double value;
    scanf("%lf", &value);
    printf("The arccosine of %lf is %lf degrees\n", value, acos(value) * 180 / M_PI);
}

//Arctangent..Taking user Input and calculate than print..
void Arctangent() {
    printf("Enter the value for arctangent: ");
    double value;
    scanf("%lf", &value);
    printf("The arctangent of %lf is %lf degrees\n", value, atan(value) * 180 / M_PI);
}

//Taking an Input from the user and calculate exponentiation..
void Exponentiation() {
	double num;
	printf("Enter the number: ");
	scanf("%lf",&num);
	double res = exp(num);
	printf("The exponentiation of %lf is %lf", num, res);
}

//Taking an Input from the user and calculate squareroot..
void Squareroot() {
    double b;
    printf("Enter the number you want the square root of : ");
    scanf("%lf",&b);
    double s = sqrt(b);
    printf("The square root of %lf is %lf",b,s);
}

//Taking an Input from the user and calculate cuberoot...
void Cuberoot() {
    double num, cubeRoot;
    printf("Enter the number you want the cube root of : ");
    scanf("%lf" ,&num);
    cubeRoot =  cbrt(num);
    printf("The cube root of %lf is %lf", num, cubeRoot);
}

//Taking an Input from the user and calculate nthroot..
void nthroot() {
	double number;
    int n;
    printf("Enter the number: ");
    scanf("%lf", &number);
    printf("Enter the value of n: ");
    scanf("%d", &n);
    if (number < 0 && n % 2 == 0) {
        printf("Cannot calculate even-root of a negative number.\n");
        return;
    }
    double result = pow(number, 1.0 / n);
    printf("%dth root of %.2f is: %.2f\n", n, number, result);
}

//Taking an Input from the user and calculate factorial..
void Factorial(){
    int n,factorial;
    printf("Enter the number you want the factorial of: ");
    scanf("%d",&n);
    factorial=1;
    for(int i=1;i<=n;i++){
        factorial=factorial*i; 
    }
    printf("\nFactorial of %d is %d",n,factorial);
}

//Taking an Input from the user and calculate absolutevalue..
void Absolutevalue() {
	   int num, n; 
    printf (" Enter a number to display the absolute value: ");  
    scanf ("%d", &num);    
    n = abs (num);  
    printf ("\n The absolute value of %d is %d. ", num, n);  
}

//Logarithm..Taking Input user and than calculate the logarithm...
void Logarithm () {
    double num, result;
    printf("Enter a number for logarithm (base 10): ");
    scanf("%lf", &num);
    result = log10(num);
    printf("Logarithm (base 10) of %lf is %lf\n", num, result);
}

//NaturalLogarithm..Taking Input user and than calculate the Naturallogarithm...
void Naturallogarithm () {
    double num, result;
    printf("Enter a number for natural logarithm (base e): ");
    scanf("%lf", &num);
    result = log(num);
    printf("Natural Logarithm (base e) of %lf is %lf\n", num, result);
}

//Custombaselogarithm..Taking Input user and than calculate the Custombaselogarithm...
void Custombaselogarithm() {
    double num, base, result;
    printf("Enter a number: ");
    scanf("%lf", &num);
    printf("Enter the base: ");
    scanf("%lf", &base);
    result = log(num) / log(base);
    printf("Logarithm (base %lf) of %lf is %lf\n", base, num, result);
}

//Mean..Taking Input user and than calculate the mean...
void Mean() {
    int size;
    printf("Enter the size of the array: ");
    scanf("%d", &size);
    if (size <= 0) {
        printf("Invalid array size.\n");
        return;
    }
    int arr[size];
    printf("Enter the elements of the array:\n");
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }
    if (size <= 0) {
        printf("Cannot calculate mean for an empty array.\n");
        return;
    }
    int sum = 0;
    for (int i = 0; i < size; i++) {
        sum += arr[i];
    }
    double mean = (double)sum / size;
    printf("Mean: %f\n", mean);
}

//Median..Taking Input user and than calculate the median...
void Median() {
    int num1, num2, num3;
    printf("Enter the first number: ");
    scanf("%d", &num1);
    printf("Enter the second number: ");
    scanf("%d", &num2);
    printf("Enter the third number: ");
    scanf("%d", &num3);
    
    int median;
    if ((num1 >= num2 && num1 <= num3) || (num1 <= num2 && num1 >= num3))
        median = num1;
    else if ((num2 >= num1 && num2 <= num3) || (num2 <= num1 && num2 >= num3))
        median = num2;
    else
        median = num3;
    printf("Median: %d\n", median);
}

//Mode..Taking Input user and than calculate the mode...
void Mode() {
    int num1, num2, num3;
    printf("Enter the first number: ");
    scanf("%d", &num1);
    printf("Enter the second number: ");
    scanf("%d", &num2);
    printf("Enter the third number: ");
    scanf("%d", &num3);
    int mode;
    if (num1 == num2 && num1 == num3) {
        printf("No mode (all numbers are equal).\n");
        return;
    } else if (num1 == num2 || num1 == num3) {
        mode = num1;
    } else if (num2 == num3) {
        mode = num2;
    } else {
        printf("No mode (all numbers are distinct).\n");
        return;
    }
    printf("Mode: %d\n", mode);
}

//Standarddeviation..Taking Input user and than calculate the standarddeviation...
void Standarddeviation() {
    int size;
    printf("Enter the size of the array: ");
    scanf("%d", &size);
    if (size <= 1) {
        printf("Invalid array size for standard deviation.\n");
        return;
    }
    int arr[size];
    printf("Enter the elements of the array:\n");
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }
    double mean = 0.0;
    for (int i = 0; i < size; i++) {
        mean += arr[i];
    }
//From the mean Calculate the sum of squaredifference..
    mean /= size;
    double sumSquaredDiff = 0.0;
    for (int i = 0; i < size; i++) {
        sumSquaredDiff += pow(arr[i] - mean, 2);
    }
    double stdDeviation = sqrt(sumSquaredDiff / size);
    printf("Standard Deviation: %f\n", stdDeviation);
}

//Variance..Taking Input user and than calculate the variance...
void Variance() {
    int size;
    printf("Enter the size of the array: ");
    scanf("%d", &size);
    if (size <= 1) {
        printf("Invalid array.\n");
        return;
    }
    int arr[size];
    printf("Enter the elements of the array:\n");
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }
    double mean = 0.0;
    for (int i = 0; i < size; i++) {
        mean += arr[i];
    }
//From the mean Calculate the sum of squaredifference.. 
    mean /= size;
    double sumSquaredDiff = 0.0;
    for (int i = 0; i < size; i++) {
        sumSquaredDiff += pow(arr[i] - mean, 2);
    }
    double variance = sumSquaredDiff / size;
    printf("Variance: %f\n", variance);
}

//Modulus..
void Modulus() {
   printf("Enter the numbers: ");
    int a,b;
    scanf("%d%d",&a,&b);
    printf("The modulus of a and b is %d\n",a%b);
}

//Percentagecalculation...
void Percentagecalculation() {
    double total, obtained;
    printf("Enter the total marks: ");
    scanf("%lf", &total);
    printf("Enter the obtained marks: ");
    scanf("%lf", &obtained);
    double percentage = (obtained / total) * 100.0;
    printf("Percentage: %lf%%\n", percentage);
}

//GCD...
void GCD() {
    int a, b, c;
    printf("Enter the value for a: ");
    scanf("%d", &a);
    printf("Enter the value for b: ");
    scanf("%d", &b);
    printf("Enter the value for c: ");
    scanf("%d", &c);
    int smallest;
    if (a < b && a < c) {
        smallest = a;
    } else if (b < a && b < c) {
        smallest = b;
    } else {
        smallest = c;
    }
    int gcd;
    for (int i = smallest; i >= 1; i--) {
        if (a % i == 0 && b % i == 0 && c % i == 0) {
            gcd = i;
            break;
        }
    }
    printf("GCD: %d\n", gcd);
}

//LCM...
void LCM() {
    int a, b, c;
    printf("Enter the value for a: ");
    scanf("%d", &a);
    printf("Enter the value for b: ");
    scanf("%d", &b);
    printf("Enter the value for c: ");
    scanf("%d", &c);
    int lcm;
    for (int i = 1; i <= a * b * c; i++) {
        if (i % a == 0 && i % b == 0 && i % c == 0) {
            lcm = i;
            break;
        }
    }
    printf("LCM: %d\n", lcm);
}

//FloorAndCeil...
void floorAndCeil() {
    float val;
    float fVal, cVal;
    printf("Enter a float value: ");
    scanf("%f", &val);
    fVal = floor(val);
    cVal = ceil(val);
    printf("floor value: %f \n ceil value: %f \n", fVal, cVal);
}
//Addition of two complex numbers
void Additionofcomplexnumbers() {
	float r1, i1, r2, i2;

    // Taking Input user of complex number..
    printf("Enter the real and imaginary number of the first complex number: ");
    scanf("%f %f", &r1, &i1);

    printf("Enter the real and imaginary number of the second complex number: ");
    scanf("%f %f", &r2, &i2);
	
    float real_sum = r1 + r2;
    float imag_sum = i1 + i2;
    printf("Sum of complex numbers: %.2f + %.2fi\n", real_sum, imag_sum);
    
}


// Subtraction of two complex numbers..
void Subtractionofcomplexnumbers() {
	float r1, i1, r2, i2;

    // Taking Input User of complex number..
    printf("Enter the real and imaginary number of the first complex number: ");
    scanf("%f %f", &r1, &i1);

    printf("Enter the real and imaginary number of the second complex number: ");
    scanf("%f %f", &r2, &i2);
	
    float real_diff = r1 - r2;
    float imag_diff = i1 - i2;
    printf("Difference of complex numbers: %.2f + %.2fi\n", real_diff, imag_diff);
    

}

// Multiplication of two complex numbers...
void Multiplicationofcomplexnumbers() {
	float r1, i1, r2, i2;

    // Taking Input User of complex number...
    printf("Enter the real and imaginary number of the first complex number: ");
    scanf("%f %f", &r1, &i1);

    printf("Enter the real and imaginary number of the second complex number: ");
    scanf("%f %f", &r2, &i2);
	
    float real_product = (r1 * r2) - (i1 * i2);
    float imag_product = (r1 * i2) + (i1 * r2);
    printf("Product of complex numbers: %.2f + %.2fi\n", real_product, imag_product);
    

}

// Division of two complex numbers...
void Divisionofcomplexnumbers() {
	float r1, i1, r2, i2;

    // Taking Input user of complex number.. 
    printf("Enter the real and imaginary number of the first complex number: ");
    scanf("%f %f", &r1, &i1);

    printf("Enter the real and imaginary number of the second complex number: ");
    scanf("%f %f", &r2, &i2);
	
    float denominator = (r2 * r2) + (i2 * i2);

    if (denominator == 0) {
        printf("Divide by zero is invalid.\n");
        return;
    }

    float real_quotient = ((r1 * r2) + (i1 * i2)) / denominator;
    float imag_quotient = ((i1 * r2) - (r1 * i2)) / denominator;

    printf("Quotient of complex numbers: %.2f + %.2fi\n", real_quotient, imag_quotient);
    
}

// finding the conjugate of a complex number...
void Conjugateofacomplexnumber() {
	float r1, i1, r2, i2;

    // Taking input of complex numbers
    printf("Enter the real and imaginary number of the first complex number: ");
    scanf("%f %f", &r1, &i1);

    printf("Enter the real and imaginary number of the second complex number: ");
    scanf("%f %f", &r2, &i2);

	
    printf("Conjugate of the complex number: %.2f + %.2fi\n", r1, -i1);
    
}
