#include <stdio.h>

void addition();
void subtraction();
void multiplication();
void division();

int main() {
    printf("\t\tWelcome to the scientific calculator!!\n\n");
    int choice;
    printf("\n******* Press 0 to quit the program ********\n");
    printf("Enter 1 for Addition \n");
    printf("Enter 2 for Subtraction \n");
    printf("Enter 3 for Multiplication \n");
    printf("Enter 4 for Division \n");

        while (1) {
        printf("\n\nEnter the operation you want to do: ");

        scanf("%d", &choice);

        switch (choice) {
            case 1:
                addition();
                break;
            case 2:
                subtraction();
                break;
            case 3:
                multiplication();
                break;
            case 4:
                division();
            case 0:
                exit(0);
            default:
                printf("Invalid choice");
        }
    }
    return 0;
}

void addition() {
    printf("Enter the numbers you want to add: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The sum of a and b is %d\n", a + b);
}

void subtraction() {
    printf("Enter the numbers you want to subtract: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The subtraction of a and b is %d\n", a - b);
}

void multiplication() {
    printf("Enter the numbers you want to multiply: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The multiplication of a and b is %d\n", a * b);
}

void division() {
    printf("Enter the numbers you want to divide: ");
    int a, b;
    scanf("%d %d", &a, &b);
    printf("The division of a and b is %f\n", (float) a / (float) b);
}    
